{
  "name": "v2ex.ext",
  "version": "0.2.8",
  "manifest_version": 2,

  "description": "V2EX Extension",
  "homepage_url": "https://github.com/jkeylu/v2ex.ext",
  "author": "jKey Lu",
  "browser_action": {
      "default_icon": "v2ex.ico",
      "default_popup": "popup.html",
      "default_title": "V2EX"
   },

  "icons": {
    "16": "v2ex.ico",
    "48": "v2ex.ico",
    "128": "v2ex.ico"
  },

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "notifications",
    "storage",
    "*://*.weibo.com/",
    "*://*.v2ex.com/",
    "*://v2ex.com/"
  ],

  "options_page": "option/options.html",

  "background": { "scripts": ["background.js"] },

  "content_scripts": [
    {
      "matches": [
        "*://*.v2ex.com/*",
        "*://v2ex.com/*"
      ],
      "css": [
        "css/jquery.powertip.min.css",
        "css/v2ex.ext.css"
      ],
      "js": [
        "js/jquery-2.1.1.min.js",
        "js/jquery.powertip.min.js",
        "js/v2ex.ext.js",
        "js/cookie.js",
        "js/notification.js"
      ],
      "run_at": "document_start"
    }
  ]
}
